{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    // Start PowerShell (pwsh on *nix)
    "windows": {
        "options": {
            "shell": {
                "executable": "powershell.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Test",
            "type": "shell",
            "command": "Invoke-Psake ${cwd}/psake.ps1 -tasklist 'test' -Verbose"
        },
        {
            "label": "BuildMarkdown",
            "type": "shell",
            "command": "Invoke-Psake ${cwd}/psake.ps1 -Tasklist buildmarkdown -Verbose"
        },
        {
            "label": "Plaster New Function",
            "type": "shell",
            "command": "Invoke-Plaster -templatepath ./templates/NewFunction -destinationpath ./"
        }
    ]
}
